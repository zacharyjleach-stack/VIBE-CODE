# =============================================================================
# Iris & Aegis Vibe Coding Platform - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values
# Do NOT commit .env to version control
# =============================================================================

# =============================================================================
# Iris Frontend Configuration
# =============================================================================

# URL where Aegis backend is accessible (for client-side API calls)
NEXT_PUBLIC_AEGIS_URL=http://localhost:8080

# Node environment for Iris
IRIS_NODE_ENV=development

# =============================================================================
# Aegis Backend Configuration
# =============================================================================

# Port for Aegis API server
AEGIS_PORT=8080

# Node environment for Aegis
AEGIS_NODE_ENV=development

# =============================================================================
# Redis Configuration
# =============================================================================

# Redis connection URL (for job queue and state management)
REDIS_URL=redis://localhost:6379

# Redis password (optional - leave empty for local development)
REDIS_PASSWORD=

# =============================================================================
# Worker Pool Configuration
# =============================================================================

# Maximum number of concurrent AI agent worker slots
MAX_WORKER_SLOTS=16

# Worker pool size for agent execution containers
WORKER_POOL_SIZE=16

# Worker heartbeat interval in milliseconds
WORKER_HEARTBEAT_INTERVAL=5000

# Worker task timeout in milliseconds (30 minutes default)
WORKER_TASK_TIMEOUT=1800000

# =============================================================================
# Docker Configuration
# =============================================================================

# Docker socket path (for container orchestration)
DOCKER_SOCKET=/var/run/docker.sock

# Workspace data volume path
WORKSPACE_DATA_PATH=/workspace

# =============================================================================
# API Configuration
# =============================================================================

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://iris:3000

# API rate limiting (requests per minute)
RATE_LIMIT_RPM=100

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable structured JSON logging
LOG_JSON=false

# =============================================================================
# Security Configuration
# =============================================================================

# JWT secret for authentication (generate with: openssl rand -base64 32)
JWT_SECRET=your-secret-key-change-in-production

# Session timeout in seconds (24 hours default)
SESSION_TIMEOUT=86400

# =============================================================================
# Production Configuration (only needed for deployment)
# =============================================================================

# Production domain
# PRODUCTION_DOMAIN=yourdomain.com

# SSL certificate paths
# SSL_CERT_PATH=/etc/ssl/certs/cert.pem
# SSL_KEY_PATH=/etc/ssl/private/key.pem

# =============================================================================
# Node Environment (global)
# =============================================================================

NODE_ENV=development
