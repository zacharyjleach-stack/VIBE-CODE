{
  "name": "aegis-workspace",
  "version": "1.0.0",
  "description": "Aegis - Universal Agentic Bridge & Governance Layer",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "web": "npm run dev --workspace=@aegis/web",
    "hud": "npm run dev --workspace=packages/hud",
    "nexus": "npm run dev --workspace=packages/nexus",
    "report": "npm run dev --workspace=@aegis/report",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "chokidar": "^5.0.0",
    "commander": "^14.0.3",
    "openai": "^6.22.0",
    "playwright": "^1.58.2",
    "uuid": "^13.0.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "typescript": "^5.9.3"
  }
}
