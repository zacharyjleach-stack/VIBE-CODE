generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id          String   @id @default(uuid())
  name        String
  path        String   @unique
  tier        String   @default("free") // free | pro
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  events      Event[]
  snapshots   Snapshot[]
  agents      AgentConfig[]
}

model Event {
  id          String   @id @default(uuid())
  projectId   String
  type        String   // file_change | agent_sync | vibe_check | logic_guard
  agent       String?  // cursor | claude | gemini
  filePath    String?
  diff        String?
  summary     String?
  metadata    String?  // JSON string
  createdAt   DateTime @default(now())

  project     Project  @relation(fields: [projectId], references: [id])
}

model Snapshot {
  id          String   @id @default(uuid())
  projectId   String
  stateJson   String   // AEGIS_STATE.json content
  createdAt   DateTime @default(now())

  project     Project  @relation(fields: [projectId], references: [id])
}

model AgentConfig {
  id          String   @id @default(uuid())
  projectId   String
  agentType   String   // cursor | claude | gemini
  configPath  String
  isActive    Boolean  @default(true)
  lastSync    DateTime?
  createdAt   DateTime @default(now())

  project     Project  @relation(fields: [projectId], references: [id])
}

model UsageRecord {
  id            String   @id @default(uuid())
  projectId     String
  type          String   // vision_token | sync_event
  quantity      Int      @default(1)
  stripeEventId String?
  createdAt     DateTime @default(now())
}

model Subscription {
  id               String   @id @default(uuid())
  email            String   @unique
  stripeCustomerId String?
  stripePriceId    String?
  status           String   @default("free") // free | pro | cancelled
  currentPeriodEnd DateTime?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
